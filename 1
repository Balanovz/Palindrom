#include <iostream>
using namespace std;

bool Palindrom(int n) {
	int x = 0;
	int t = n;
	while (t > 0) {
		x *= 10;
		x += t % 10;
		t /= 10;
	}
	return x == n;
}

//функция преобразования числа из одной системы в другую
int newSystem(int n, int m) {
	int t = n;
	int x = 0;
	while (t > 0) {
		x *= 10;
		x += t % m;
		t /= m;
	}
	return x;
}

int main() {
	int n, m;
	cout << "Enter the value of a natural number: ";
	cin >> n;
	cout << "Enter which system do you want to work on: ";
	cin >> m;
	if(n > 10){
		cout << "number " << n << " in " << m << "-system " << hex << n << endl;
		Palindrom(printf("%X\n", n)) ? cout << "number is palindrom." << endl : cout << "number is NOT palindrom." << endl;
	}
	else {
		cout << "number " << n << " in " << m << "-system " << newSystem(n, m) << endl;
		Palindrom(newSystem(n, m)) ? cout << "number is palindrom." << endl : cout << "number is NOT palindrom." << endl;
	}
	return 0;
}
